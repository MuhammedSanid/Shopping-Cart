<section>
<div class="container">
  <div class="row mt-4">
    <a href="/admin/add-product"><button type="button" class="btn btn-success" style="margin-left: 85%;" >Add product</button></a>
  </div>
<table class="table mt-5" id="productsTable">
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">Discription</th>
      <th scope="col">Price</th>
      <th>image</th>
      <th>Options</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.Name}}</td>
      <td>{{this.category}}</td>
      <td>{{this.description}}</td>
      <td>{{this.price}}</td>
      <td><img style="height: 50px;width: 50px;" src="/product-images/{{this._id}}.jpg" alt=""></td>
      <td>
        <a href="/admin/edit-product/{{this._id}}" class="btn btn-info">Edit</a>
        <a href="/admin/delete-product/{{this._id}}" class="btn btn-warning" onclick="return confirm('are you want to delete {{this.Name}}?')">Delete</a>
                </td>
    </tr>
    {{/each}}
  </tbody>
</table>

</div>

</section>
<script>
 $(document).ready( function () {
    $('#productsTable').DataTable();
} );
</script>      