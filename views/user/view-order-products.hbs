    <section>
        <div class="container mt-5 p-5">
            <div class="row">
                {{#each products}}

                <div class="col-md-3 p-3">
                    <div class="card" style="width: 15rem; height: 22rem;">
                        <img src="/product-images/{{this.product._id}}.jpg"
                            class="card-img-top" alt="card-img-top" style="height: 10rem;">
                        <div class="card-body">
                            <h5 class="card-title">{{this.product.Name}}</h5>
                            <p class="card-text">{{this.description}}</p>
                            <p class="card-text"> &#8377 {{this.product.price}}</p>
                             <p class="card-text">Quantity:{{this.quantity}}</p>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </section>

    

    