    <section>
        <div class="container mt-5 p-5" >
            <div class="row">
                {{#each products}}

                <div class="col-md-3">
                    <div class="card" style="width: 15rem; height: 22rem;">
                        <img src="/product-images/{{this._id}}.jpg"
                            class="card-img-top" alt="card-img-top" style="height: 10rem;">
                        <div class="card-body">
                            <h5 class="card-title">{{this.Name}}</h5>
                            <p class="card-text">{{this.description}}</p>
                            <p class="card-text"> &#8377 {{this.price}}</p>
                            <button onclick="addToCart('{{this._id}}')" class="btn btn-primary">Add to cart</button>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </section>
  


    

    